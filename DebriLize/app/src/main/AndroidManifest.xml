<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.debri_lize">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".utils.ApplicationClass"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DebriLize"
        tools:targetApi="31">
        <activity

            android:name=".activity.CurriculumSettingActivity"
            android:exported="true" />
        <activity
            android:name=".activity.SplashActivity"
            android:exported="true"
            android:noHistory="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.auth.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".activity.auth.SignUpActivity"
            android:exported="true" />
        <activity
            android:name=".activity.AddCurriculumActivity"
            android:exported="true" />
        <activity
            android:name=".activity.AddCurriculumChooseActivity"
            android:exported="true" />
        <activity
            android:name=".activity.AddRoadmapDetailActivity"
            android:exported="true" />
        <activity
            android:name=".activity.AddCurriculumDetailActivity"
            android:exported="true" />
        <activity
            android:name=".activity.LectureDetailActivity"
            android:exported="true" />
        <activity
            android:name=".activity.ChooseMyCurriculumActivity"
            android:exported="true" />
        <activity
            android:name=".activity.PostListActivity"
            android:exported="true" />
        <activity
            android:name=".activity.PostCreateActivity"
            android:exported="true" />
        <activity
            android:name=".activity.PostDetailActivity"
            android:exported="true" />
        <activity
            android:name=".activity.MainActivity"
            android:exported="true" />
        <activity
            android:name=".activity.auth.ProfileActivity"
            android:exported="true" />
    </application>

</manifest>