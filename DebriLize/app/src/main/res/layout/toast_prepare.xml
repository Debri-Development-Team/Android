<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="15dp"
    android:background="@drawable/border_round_transparent_gray_10"
    android:layout_marginStart="25dp"
    android:layout_marginEnd="20dp"
    android:paddingTop="5dp">

    <ImageView
        android:id="@+id/toast_prepare_mark_red_iv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_dialog_mark_red"
        android:layout_marginStart="15dp"
        android:layout_marginTop="17dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="3dp">
            <TextView
                android:id="@+id/toast_prepare_roadmap_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="'안드로이드 로드맵'"
                android:includeFontPadding="false"
                android:fontFamily="@font/noto_sans_kr_bold"
                android:textColor="@color/black"
                android:textSize="14dp" />
            <TextView
                android:id="@+id/toast_prepare_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="은 현재 준비 중입니다"
                android:includeFontPadding="false"
                android:fontFamily="@font/noto_sans_kr_regular"
                android:textSize="13.5dp"
                android:textColor="@color/black"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="30dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/toast_update_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="업데이트 될 때 알려드릴게요!"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:includeFontPadding="false"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="30dp"/>
    </LinearLayout>





</LinearLayout>