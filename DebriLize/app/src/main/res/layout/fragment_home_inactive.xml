<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/darkmode_background">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/home_debri_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/home_debri_logo_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/logo_debri_img_eng" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/home_debri_user_iv"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:src="@drawable/ic_profile" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:id="@+id/home_curriculum_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_debri_layout"
                android:gravity="center_vertical"
                android:layout_marginTop="40dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/home_curriculum_previous_iv"
                    android:layout_width="18dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_previous"
                    />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/home_curriculum_title_tv"
                        android:layout_width="260dp"
                        android:layout_height="wrap_content"
                        android:text="자바 첫 걸음"
                        android:fontFamily="@font/noto_sans_kr_bold"
                        android:includeFontPadding="false"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/home_curriculum_date_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2022년 5월 30일에 완성함"
                        android:fontFamily="@font/noto_sans_kr_regular"
                        android:includeFontPadding="false"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:layout_gravity="center"/>

                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/home_curriculum_next_iv"
                    android:layout_width="18dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_next"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/home_curriculum_hide_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="18dp"
                app:layout_constraintStart_toEndOf="@+id/home_curriculum_dday_tv"
                app:layout_constraintTop_toTopOf="@+id/home_curriculum_dday_tv"
                app:layout_constraintBottom_toBottomOf="@+id/home_curriculum_dday_tv">

                <ImageView
                    android:id="@+id/home_curriculum_hide_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_hide" />

                <TextView
                    android:id="@+id/home_curriculum_hide_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="비공개"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:includeFontPadding="false"
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="7dp"/>

            </LinearLayout>



            <TextView
                android:id="@+id/home_curriculum_dday_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="D-00"
                android:textColor="@color/white"
                android:textSize="35dp"
                android:fontFamily="@font/noto_sans_kr_bold"
                android:includeFontPadding="false"
                android:background="@drawable/border_line_bottom"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_curriculum_layout"/>

            <LinearLayout
                android:id="@+id/home_curriculum_progress_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="@+id/home_curriculum_dday_tv"
                app:layout_constraintEnd_toEndOf="@+id/home_curriculum_dday_tv"
                app:layout_constraintTop_toBottomOf="@+id/home_curriculum_dday_tv">

                <TextView
                    android:id="@+id/home_curriculum_progress_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="달성률"
                    android:fontFamily="@font/noto_sans_kr_bold"
                    android:includeFontPadding="false"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:gravity="center"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/home_curriculum_progress_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:includeFontPadding="false"
                    android:textColor="@color/debri"
                    android:textSize="12dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/home_curriculum_progress_tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="%"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:includeFontPadding="false"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <View
                android:id="@+id/home_curriculum_inactive_circle"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/circle_red_opacity_30"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_curriculum_progress_layout"/>

            <LinearLayout
                android:id="@+id/home_curriculum_inactive_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginTop="42dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_curriculum_progress_layout">

                <TextView
                    android:id="@+id/home_curriculum_inactive_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:includeFontPadding="false"
                    android:text="커리큘럼 비활성화 중"
                    android:textColor="@color/white"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/home_curriculum_inactive_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:includeFontPadding="false"
                    android:text="한번에 하나의 커리큘럼만 잔행할 수 있어요 "
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:layout_marginTop="7dp"/>

                <LinearLayout
                    android:id="@+id/home_curriculum_active_layout"
                    android:layout_width="147dp"
                    android:layout_height="44dp"
                    android:background="@drawable/border_round_white_transparent_10"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp">

                    <ImageView
                        android:id="@+id/home_curriculum_active_iv"
                        android:layout_width="11.75dp"
                        android:layout_height="14.86dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/ic_play" />

                    <TextView
                        android:id="@+id/home_curriculum_active_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/noto_sans_kr_regular"
                        android:includeFontPadding="false"
                        android:text="커리큘럼 활성화"
                        android:textColor="@color/white"
                        android:textSize="10dp" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/border_line"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@drawable/border_line_bottom_dark_green"
                android:layout_marginTop="45dp"
                android:layout_marginStart="80dp"
                android:layout_marginEnd="80dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_curriculum_inactive_layout"/>

            <TextView
            android:id="@+id/home_lecture_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginStart="30dp"
            android:text="관련 강의자료"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:includeFontPadding="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/border_line" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/home_curriculum_lecture_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:orientation="vertical"
                android:overScrollMode="never"
                android:nestedScrollingEnabled="false"
                tools:listitem="item_curriculum_lecture"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_lecture_tv" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:id="@+id/home_curriculum_add_lecture_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_curriculum_lecture_rv"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:background="@drawable/border_round_right_white_transparent_2">

                <ImageView
                    android:id="@+id/item_curriculum_lecture_progress_tv"
                    android:layout_width="75dp"
                    android:layout_height="60dp"
                    android:padding="20dp"
                    android:gravity="center"
                    android:src="@drawable/ic_plus"
                    android:background="@drawable/border_line_right"/>

                <TextView
                    android:id="@+id/item_curriculum_lecture_img_tag_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_sans_kr_bold"
                    android:includeFontPadding="false"
                    android:text="새로운 강의 추가하기"
                    android:textSize="14dp"
                    android:textColor="@color/white"
                    android:layout_marginStart="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/home_curriculum_setting_layout"
                android:layout_width="147dp"
                android:layout_height="44dp"
                android:background="@drawable/border_round_white_transparent_10"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_curriculum_add_lecture_layout">

                <ImageView
                    android:id="@+id/home_curriculum_setting_iv"
                    android:layout_width="15.48dp"
                    android:layout_height="16.5dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_setting" />

                <TextView
                    android:id="@+id/home_curriculum_setting_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:includeFontPadding="false"
                    android:text="설정 변경"
                    android:textColor="@color/white"
                    android:textSize="12dp" />

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>