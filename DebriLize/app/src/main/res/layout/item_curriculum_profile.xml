<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/darkmode_background">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/profile_curriculum_layout"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@color/darkmode_background"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">


    <ImageView
        android:id="@+id/profile_curriculum_status_iv"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_previous" />

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/profile_curriculum_name_tv"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/noto_sans_kr_regular"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:text="자바 첫 걸음"
                android:textColor="@color/white"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/item_curriculum_lecture_img_tag_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Front"
                android:fontFamily="@font/noto_sans_kr_bold"
                android:includeFontPadding="false"
                android:textSize="10dp"
                android:textColor="@color/white"
                android:paddingVertical="2dp"
                android:paddingHorizontal="6dp"
                android:background="@drawable/border_round_transparent_front_10"/>

        </LinearLayout>



        <TextView
            android:id="@+id/profile_curriculum_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2022년 6월 10일에 시작함"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:textSize="10dp"
            android:visibility="visible"
            android:ellipsize="end"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/profile_curriculum_desc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Basic Tools 에 대한 이해"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:textSize="10dp"
            android:visibility="gone"
            android:ellipsize="end"
            android:maxLines="1" />

        <LinearLayout
            android:id="@+id/profile_private_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:visibility="gone">
            <ImageView
                android:id="@+id/profile_private_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_hide"/>
            <TextView
                android:id="@+id/profile_private_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="공개 중"
                android:fontFamily="@font/noto_sans_kr_medium"
                android:includeFontPadding="false"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:layout_marginStart="7dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_curriculum_author_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="by  "
                android:textColor="@color/white"
                android:fontFamily="@font/noto_sans_kr_regular"
                android:includeFontPadding="false"/>
            <TextView
                android:id="@+id/item_curriculum_author_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="자바왕"
                android:textColor="@color/white"
                android:fontFamily="@font/noto_sans_kr_medium"
                android:includeFontPadding="false" />
        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/profile_curriculum_next_iv"
        android:layout_width="6dp"
        android:layout_height="14dp"
        android:src="@drawable/btn_next_white"/>

</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>