<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkmode_background">

    <ImageView
        android:id="@+id/add_curriculum_logo_debri_iv"
        android:layout_width="48dp"
        android:layout_height="33dp"
        android:src="@drawable/logo_debri_img"
        android:layout_marginTop="40dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/add_curriculum_logo_debri_kor_iv"
        android:layout_width="68dp"
        android:layout_height="33dp"
        android:src="@drawable/logo_debri_kor_white"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/add_curriculum_logo_debri_iv"
        app:layout_constraintStart_toEndOf="@+id/add_curriculum_logo_debri_iv" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MENU"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>