<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkmode_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/darkmode_background">

        <LinearLayout
            android:id="@+id/add_roadmap_debri_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/add_roadmap_debri_logo_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logo_debri_img_eng" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/add_roadmap_debri_user_iv"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:src="@drawable/ic_profile"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/add_roadmap_info_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_roadmap_debri_layout"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@color/darkmode_background"
            android:layout_marginTop="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp">

            <ImageView
                android:id="@+id/profile_curriculum_next_iv"
                android:layout_width="18dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_previous" />


            <ImageView
                android:id="@+id/item_curriculum_status_iv"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_circle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_curriculum_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="서버 로드맵"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:includeFontPadding="false"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/item_curriculum_detail_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Server 및 Back-end에 대한 기초 및 심화"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:includeFontPadding="false"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/item_curriculum_author_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="by Team Debri"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:includeFontPadding="false"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_marginTop="15dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/add_roadmap_dday_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_roadmap_info_layout"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@color/darkmode_background"
            android:layout_marginTop="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp">

            <ImageView
                android:id="@+id/add_roadmap_dday_iv"
                android:layout_width="25dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_arrow_left_down" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="vertical"
                android:layout_marginStart="7dp">

                <TextView
                    android:id="@+id/add_roadmap_dday_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="커리큘럼 진행 기간"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:includeFontPadding="false"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/add_roadmap_dday_tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100"
                        android:fontFamily="@font/noto_sans_kr_bold"
                        android:includeFontPadding="false"
                        android:textColor="@color/debri"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/add_roadmap_dday_tv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="일"
                        android:fontFamily="@font/noto_sans_kr_bold"
                        android:includeFontPadding="false"
                        android:textColor="@color/white"
                        android:textSize="16dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/login_btn"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:background="@drawable/border_round_transparent_debri_6"
            android:text="시작하기"
            android:textColor="@color/darkmode_background"
            android:fontFamily="@font/noto_sans_kr_bold"
            android:textSize="16dp"
            android:includeFontPadding="false"
            android:layout_marginEnd="30dp"
            app:layout_constraintTop_toTopOf="@+id/add_roadmap_dday_layout"
            app:layout_constraintBottom_toBottomOf="@+id/add_roadmap_dday_layout"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:layout_width="20.5dp"
            android:layout_height="79.5dp"
            android:src="@drawable/ic_arrow_down_right"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="7dp"
            app:layout_constraintEnd_toStartOf="@+id/add_roadmap_detail_layout1"
            app:layout_constraintTop_toTopOf="@+id/add_roadmap_detail_layout1"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/add_roadmap_detail_layout1"

                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/border_round_white_darkmode_roadmap_3"

                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:paddingStart="21dp"
                android:paddingEnd="21dp"

                android:layout_marginStart="60dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="55dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/add_roadmap_dday_layout">

                <LinearLayout
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/add_roadmap_detail_title_tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1. Basic Tools"
                        android:fontFamily="@font/noto_sans_kr_bold"
                        android:includeFontPadding="false"
                        android:textColor="@color/white"
                        android:textSize="14dp"
                        android:maxLines="1"
                        android:ellipsize="end"/>

                    <TextView
                        android:id="@+id/add_roadmap_detail_description_tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Linux 에 대한 이해"
                        android:fontFamily="@font/noto_sans_kr_regular"
                        android:includeFontPadding="false"
                        android:textColor="@color/white"
                        android:textSize="10dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"/>
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/add_roadmap_detail_check_iv1"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_circle" />

            </LinearLayout>

        <ImageView
            android:layout_width="20.5dp"
            android:layout_height="79.5dp"
            android:src="@drawable/ic_arrow_down_right"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="7dp"
            app:layout_constraintEnd_toStartOf="@+id/add_roadmap_detail_layout2"
            app:layout_constraintTop_toTopOf="@+id/add_roadmap_detail_layout2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/add_roadmap_detail_layout2"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/border_round_white_darkmode_roadmap_3"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:paddingStart="21dp"
                android:paddingEnd="21dp"

                android:layout_marginStart="60dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/add_roadmap_detail_layout1">

                <LinearLayout
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/add_roadmap_detail_title_tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2. Back-end 기초"
                        android:fontFamily="@font/noto_sans_kr_bold"
                        android:includeFontPadding="false"
                        android:textColor="@color/white"
                        android:textSize="14dp"
                        android:maxLines="1"
                        android:ellipsize="end"/>

                    <TextView
                        android:id="@+id/add_roadmap_detail_description_tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Language [Python / JAVA]\nDBMS [MySQL / SQL]\n프레임워크 [Spring / Node / 장고 ] "
                        android:fontFamily="@font/noto_sans_kr_regular"
                        android:includeFontPadding="false"
                        android:textColor="@color/white"
                        android:textSize="10dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"/>
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/add_roadmap_detail_check_iv2"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_circle" />

            </LinearLayout>


        <ImageView
            android:layout_width="20.5dp"
            android:layout_height="79.5dp"
            android:src="@drawable/ic_arrow_down_right"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="7dp"
            app:layout_constraintEnd_toStartOf="@+id/add_roadmap_detail_layout3"
            app:layout_constraintTop_toTopOf="@+id/add_roadmap_detail_layout3"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/add_roadmap_detail_layout3"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/border_round_white_darkmode_roadmap_3"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:paddingStart="21dp"
                android:paddingEnd="21dp"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/add_roadmap_detail_layout2">

                <LinearLayout
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/add_roadmap_detail_title_tv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3. Back-end 심화"
                        android:fontFamily="@font/noto_sans_kr_bold"
                        android:includeFontPadding="false"
                        android:textColor="@color/white"
                        android:textSize="14dp"
                        android:maxLines="1"
                        android:ellipsize="end"/>

                    <TextView
                        android:id="@+id/add_roadmap_detail_description_tv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="API [REST / JSON]\n클라우드 서버 [AWS]\n인증 [JWT]"
                        android:fontFamily="@font/noto_sans_kr_regular"
                        android:includeFontPadding="false"
                        android:textColor="@color/white"
                        android:textSize="10dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"/>
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/add_roadmap_detail_check_iv3"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_circle" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/add_roadmap_detail_layout4"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/border_round_white_darkmode_roadmap_3"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:paddingStart="21dp"
                android:paddingEnd="21dp"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/add_roadmap_detail_layout3">

                <LinearLayout
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/add_roadmap_detail_title_tv4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4. Tools"
                        android:fontFamily="@font/noto_sans_kr_bold"
                        android:includeFontPadding="false"
                        android:textColor="@color/white"
                        android:textSize="14dp"
                        android:maxLines="1"
                        android:ellipsize="end"/>

                    <TextView
                        android:id="@+id/add_roadmap_detail_description_tv4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Version Control System [git]"
                        android:fontFamily="@font/noto_sans_kr_regular"
                        android:includeFontPadding="false"
                        android:textColor="@color/white"
                        android:textSize="10dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"/>
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/add_roadmap_detail_check_iv4"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_crown" />

            </LinearLayout>

        <TextView
            android:id="@+id/add_roadmap_lecture_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="관련 강의자료"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/add_roadmap_detail_layout4"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/add_roadmap_lecture_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:orientation="vertical"
            android:overScrollMode="never"
            android:nestedScrollingEnabled="false"
            tools:listitem="item_class_favorite"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_roadmap_lecture_tv"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="40dp"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>