<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:id="@+id/item_cocomment_layout_ht"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cocomment"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/item_cocomment_iv"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:src="@drawable/ic_cocomment"
            android:layout_marginEnd="10dp"
            />

        <LinearLayout
            android:id="@+id/item_cocomment_layout_vt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginStart="5dp">

            <TextView
                android:id="@+id/item_cocomment_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans_kr_regular"
                android:includeFontPadding="false"
                android:text="지금 장난 둘 ^^"
                android:textColor="@color/white"
                android:textSize="12dp" />


            <LinearLayout
                android:id="@+id/item_cocomment_info_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/item_cocomment_profile_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="데브리짱장걸 >"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:includeFontPadding="false"
                    android:textColor="@color/white"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/item_cocomment_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="방금 전"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:includeFontPadding="false"
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    android:layout_marginStart="15dp"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/item_cocomment_like_iv"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_comment_like"
                    android:layout_marginEnd="10dp"
                    />

                <TextView
                    android:id="@+id/item_cocomment_like_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:includeFontPadding="false"
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    android:layout_marginEnd="5dp"
                    />

                <View
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/vertical_line_white_1"
                    android:layout_marginEnd="5dp"/>

                <ImageView
                    android:id="@+id/item_cocomment_menu_iv"
                    android:layout_width="18dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_menu"
                    />


            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>