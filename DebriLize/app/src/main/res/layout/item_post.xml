<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/darkmode_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/item_board_favorite_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_vertical"
        android:background="@drawable/border_line_bottom">

        <ImageView
            android:id="@+id/item_post_like_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_like_off"
            android:layout_marginEnd="20dp"
            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_post_title"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:text="여기서 오류 고치는 법"
                android:fontFamily="@font/noto_sans_kr_regular"
                android:includeFontPadding="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:maxLines="1"
                android:ellipsize="end"/>
            <TextView
                android:id="@+id/item_post_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="방금 전"
                android:fontFamily="@font/noto_sans_kr_regular"
                android:includeFontPadding="false"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/item_post_count_comment_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(1)"
            android:fontFamily="@font/noto_sans_kr_black"
            android:textStyle="bold"
            android:includeFontPadding="false"
            android:textColor="@color/debri"
            android:textSize="20sp"
            android:gravity="center|right"
            android:layout_marginEnd="5dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>