<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/darkmode_background"
    android:id="@+id/bottom_sheet_edit_delete"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:behavior_hideable="true"
    app:behavior_draggable="true"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <LinearLayout
        android:id="@+id/bottom_sheet_edit_delete_page_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:background="@drawable/border_round_transparent_bottom_sheet_10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="6dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_sheet_close_tv">

        <TextView
            android:id="@+id/bottom_sheet_edit_delete_page_tv"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/border_line_bottom"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="게시물 관리"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/bottom_sheet_edit_tv"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:fontFamily="@font/noto_sans_kr_bold"
            android:includeFontPadding="false"
            android:gravity="center"
            android:text="수정하기"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:background="@drawable/border_line_top"/>

        <TextView
            android:id="@+id/bottom_sheet_delete_tv"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:fontFamily="@font/noto_sans_kr_bold"
            android:includeFontPadding="false"
            android:gravity="center"
            android:text="삭제하기"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:background="@drawable/border_line_top"/>

    </LinearLayout>

    <TextView
        android:id="@+id/bottom_sheet_close_tv"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="닫기"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:background="@drawable/border_round_transparent_close_10"
        android:fontFamily="@font/noto_sans_kr_bold"
        android:includeFontPadding="false"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>