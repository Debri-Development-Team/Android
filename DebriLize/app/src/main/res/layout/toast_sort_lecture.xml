<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_round_transparent_gray_10"
    android:layout_marginStart="25dp"
    android:layout_marginEnd="25dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/toast_sort_mark_iv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_like_on"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:layout_gravity="center_vertical"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/toast_sort_A_Z_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A-Z"
        android:textColor="@color/debri"
        android:fontFamily="@font/noto_sans_kr_black"
        android:textSize="18dp"
        android:includeFontPadding="false"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:visibility="visible"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="리스트가"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:textSize="14dp"
        android:textColor="@color/black"
        android:layout_marginStart="3dp"/>

    <TextView
        android:id="@+id/toast_sort_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="좋아요 순"
        android:fontFamily="@font/noto_sans_kr_bold"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:layout_marginStart="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="으로 정렬되었어요!"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:textSize="14dp"
        android:textColor="@color/black"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="20dp"/>



</LinearLayout>