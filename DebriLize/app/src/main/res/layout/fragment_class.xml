<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/darkmode_background">

<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/class_logo_debri_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/logo_debri_img_eng"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/class_class_list_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="35dp"
        android:text="강의 리스트"
        android:textColor="@color/white"
        android:fontFamily="@font/noto_sans_kr_bold"
        android:includeFontPadding="false"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/class_logo_debri_iv" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/class_search_layout"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/class_class_list_tv"
        android:gravity="center_vertical"
        android:background="@drawable/border_round_white_transparent_10">

        <ImageView
            android:id="@+id/class_search_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btm_nav_search"
            android:layout_marginStart="15dp" />

        <EditText
            android:id="@+id/class_search_et"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="검색어를 입력하세요"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:inputType="text"
            android:textSize="15sp"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:includeFontPadding="false"
            android:layout_marginStart="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/class_radiogroup_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/class_search_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <RadioGroup
            android:id="@+id/class_curri_tag_rg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <RadioButton
                android:id="@+id/class_curri_tag_front_rb"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="프론트"
                android:textColor="@color/white"

                android:paddingStart="15dp"
                android:visibility="visible"
                android:fontFamily="@font/noto_sans_kr_bold"
                android:includeFontPadding="false"
                android:textSize="16sp"
                android:drawableEnd="@drawable/ic_add"
                android:paddingEnd="7dp"
                android:background="@drawable/border_round_white_transparent_18"/>
            <RadioButton
                android:id="@+id/class_curri_tag_back_rb"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="백"
                android:textColor="@color/white"

                android:paddingStart="15dp"
                android:visibility="visible"
                android:fontFamily="@font/noto_sans_kr_bold"
                android:includeFontPadding="false"
                android:textSize="16sp"
                android:drawableEnd="@drawable/ic_add"
                android:paddingEnd="7dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/border_round_white_transparent_18"/>
            <RadioButton
                android:id="@+id/class_curri_tag_c_rb"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="C언어"
                android:textColor="@color/white"

                android:paddingStart="15dp"
                android:visibility="visible"
                android:fontFamily="@font/noto_sans_kr_bold"
                android:includeFontPadding="false"
                android:textSize="16sp"
                android:drawableEnd="@drawable/ic_add"
                android:paddingEnd="7dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/border_round_white_transparent_18"/>
            <RadioButton
                android:id="@+id/class_curri_tag_python_rb"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="python"
                android:textColor="@color/white"

                android:paddingStart="15dp"
                android:visibility="visible"
                android:fontFamily="@font/noto_sans_kr_bold"
                android:includeFontPadding="false"
                android:textSize="16sp"
                android:drawableEnd="@drawable/ic_add"
                android:paddingEnd="7dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/border_round_white_transparent_18"/>
        </RadioGroup>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1">

            <RadioButton
                android:id="@+id/class_curri_tag_book_rb"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="서적"
                android:textColor="@color/white"

                android:paddingStart="15dp"
                android:visibility="visible"
                android:fontFamily="@font/noto_sans_kr_bold"
                android:includeFontPadding="false"
                android:textSize="16sp"
                android:drawableEnd="@drawable/ic_add"
                android:paddingEnd="7dp"
                android:background="@drawable/border_round_white_transparent_18"/>

            <RadioButton
                android:id="@+id/class_curri_tag_video_rb"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="영상"
                android:textColor="@color/white"

                android:paddingStart="15dp"
                android:visibility="visible"
                android:fontFamily="@font/noto_sans_kr_bold"
                android:includeFontPadding="false"
                android:textSize="16sp"
                android:drawableEnd="@drawable/ic_add"
                android:paddingEnd="7dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/border_round_white_transparent_18"/>
        </RadioGroup>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1">

            <RadioButton
                android:id="@+id/class_price_tag_forfree_rb"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="무료"
                android:textColor="@color/white"

                android:paddingStart="15dp"
                android:visibility="visible"
                android:fontFamily="@font/noto_sans_kr_bold"
                android:includeFontPadding="false"
                android:textSize="16sp"
                android:drawableEnd="@drawable/ic_add"
                android:paddingEnd="7dp"
                android:background="@drawable/border_round_white_transparent_18"/>
            <RadioButton
                android:id="@+id/class_price_tag_no_forfree_rb"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="유료"
                android:textColor="@color/white"

                android:paddingStart="15dp"
                android:visibility="visible"
                android:fontFamily="@font/noto_sans_kr_bold"
                android:includeFontPadding="false"
                android:textSize="16sp"
                android:drawableEnd="@drawable/ic_add"
                android:paddingEnd="7dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/border_round_white_transparent_18"/>
        </RadioGroup>
    </LinearLayout>

    <TextView
        android:id="@+id/class_favorite_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="30dp"
        android:text="즐겨찾기한 강의"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:fontFamily="@font/noto_sans_kr_bold"
        android:includeFontPadding="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/class_radiogroup_linearlayout" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/class_favorite_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:orientation="vertical"
        android:overScrollMode="never"
        android:nestedScrollingEnabled="false"
        tools:listitem="item_board_favorite"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/class_favorite_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>