<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<androidx.constraintlayout.widget.ConstraintLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkmode_background"
    >

    <ImageView
        android:id="@+id/sign_up_back_iv"
        android:layout_width="30dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_back"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/sign_up_back_tv"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:text="돌아가기"
        android:textColor="@color/white"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:textSize="18sp"
        android:includeFontPadding="false"
        android:layout_marginStart="7dp"
        app:layout_constraintTop_toTopOf="@+id/sign_up_back_iv"
        app:layout_constraintBottom_toBottomOf="@+id/sign_up_back_iv"
        app:layout_constraintStart_toEndOf="@+id/sign_up_back_iv"/>

    <ImageView
        android:id="@+id/sign_up_logo_debri_iv"
        android:layout_width="152dp"
        android:layout_height="106dp"
        android:src="@drawable/logo_debri_img"
        android:layout_marginTop="93dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/sign_up_logo_debri_eng_kor_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_debri_eng_kor_white"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_logo_debri_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
        android:id="@+id/sign_up_logo_debri_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="&quot;개발과 관련된 모든 것들을 연결합니다.&quot;"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:fontFamily="@font/noto_sans_kr_bold"
        android:includeFontPadding="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_logo_debri_eng_kor_iv" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/sign_up_id_layout"
        android:layout_marginTop="70dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_logo_debri_tv"
        android:gravity="center_vertical"
        android:background="@drawable/border_round_white_transparent_10">

        <TextView
            android:id="@+id/sign_up_id_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="ID"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/sign_up_id_et"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="아이디(이메일)"
            android:inputType="text"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:includeFontPadding="false"
            android:layout_marginStart="50dp"/>
    </LinearLayout>

    <View
        android:id="@+id/sign_up_id_bar_v"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/vertical_line_white_1"
        android:layout_marginStart="53dp"
        app:layout_constraintTop_toTopOf="@+id/sign_up_id_layout"
        app:layout_constraintBottom_toBottomOf="@+id/sign_up_id_layout"
        app:layout_constraintStart_toStartOf="@+id/sign_up_id_layout"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/sign_up_password_layout"
        android:layout_marginTop="15dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_id_layout"
        android:gravity="center_vertical"
        android:background="@drawable/border_round_white_transparent_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sign_up_password_tv"
            android:text="PW"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginStart="15dp"
            />

        <EditText
            android:id="@+id/sign_up_password_et"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="비밀번호"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:inputType="textPassword"
            android:textSize="18sp"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:includeFontPadding="false"
            android:layout_marginStart="42dp"/>

    </LinearLayout>

    <View
        android:id="@+id/sign_up_password_bar_v"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/vertical_line_white_1"
        android:layout_marginStart="53dp"
        app:layout_constraintTop_toTopOf="@+id/sign_up_password_layout"
        app:layout_constraintBottom_toBottomOf="@+id/sign_up_password_layout"
        app:layout_constraintStart_toStartOf="@+id/sign_up_password_layout"
        />

    <ImageView
        android:id="@+id/sign_up_capslock_password_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_capslock"
        app:layout_constraintBottom_toBottomOf="@+id/sign_up_password_layout"
        app:layout_constraintEnd_toEndOf="@+id/sign_up_password_layout"
        app:layout_constraintTop_toTopOf="@+id/sign_up_password_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/sign_up_password_check_layout"
        android:layout_marginTop="15dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_password_layout"
        android:gravity="center_vertical"
        android:background="@drawable/border_round_white_transparent_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sign_up_password_check_tv"
            android:text="비밀번호\n확인"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:includeFontPadding="false"
            android:layout_marginStart="15dp"
            />

        <EditText
            android:id="@+id/sign_up_password_check_et"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="비밀번호 확인"
            android:inputType="textPassword"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:includeFontPadding="false"
            android:layout_marginStart="28dp"/>


    </LinearLayout>

    <View
        android:id="@+id/sign_up_password_check_bar_v"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/vertical_line_white_1"
        android:layout_marginStart="53dp"
        app:layout_constraintTop_toTopOf="@+id/sign_up_password_check_layout"
        app:layout_constraintBottom_toBottomOf="@+id/sign_up_password_check_layout"
        app:layout_constraintStart_toStartOf="@+id/sign_up_password_check_layout"
        />

    <ImageView
        android:id="@+id/sign_up_capslock_password_check_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_capslock"
        app:layout_constraintBottom_toBottomOf="@+id/sign_up_password_check_layout"
        app:layout_constraintEnd_toEndOf="@+id/sign_up_password_check_layout"
        app:layout_constraintTop_toTopOf="@+id/sign_up_password_check_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/sign_up_birth_layout"
        android:layout_marginTop="15dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_password_check_layout"
        android:gravity="center_vertical"
        android:background="@drawable/border_round_white_transparent_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sign_up_birth_tv"
            android:text="생년\n월일"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:includeFontPadding="false"
            android:layout_marginStart="15dp"
            />

        <EditText
            android:id="@+id/sign_up_birth_et"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="1990-01-01"
            android:inputType="text"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:includeFontPadding="false"
            android:layout_marginStart="50dp" />
    </LinearLayout>

    <View
        android:id="@+id/sign_up_birth_bar_v"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/vertical_line_white_1"
        android:layout_marginStart="53dp"
        app:layout_constraintTop_toTopOf="@+id/sign_up_birth_layout"
        app:layout_constraintBottom_toBottomOf="@+id/sign_up_birth_layout"
        app:layout_constraintStart_toStartOf="@+id/sign_up_birth_layout"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/sign_up_nickname_layout"
        android:layout_marginTop="15dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_birth_layout"
        android:gravity="center_vertical"
        android:background="@drawable/border_round_white_transparent_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sign_up_nickname_tv"
            android:text="닉네임"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:includeFontPadding="false"
            android:layout_marginStart="15dp"
            />

        <EditText
            android:id="@+id/sign_up_nickname_et"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="나는야개발천재"
            android:inputType="text"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:includeFontPadding="false"
            android:layout_marginStart="37dp"  />
    </LinearLayout>

    <View
        android:id="@+id/sign_up_nickname_bar_v"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/vertical_line_white_1"
        android:layout_marginStart="53dp"
        app:layout_constraintTop_toTopOf="@+id/sign_up_nickname_layout"
        app:layout_constraintBottom_toBottomOf="@+id/sign_up_nickname_layout"
        app:layout_constraintStart_toStartOf="@+id/sign_up_nickname_layout"
        />



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sign_up_sign_up_btn"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:background="@drawable/border_round_transparent_gray_6"
        android:text="시작하기"
        android:textColor="@color/darkmode_background"
        android:fontFamily="@font/noto_sans_kr_bold"
        android:textSize="20sp"
        android:includeFontPadding="false"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_nickname_layout"
        app:layout_constraintEnd_toEndOf="@+id/sign_up_nickname_layout"/>

    <ProgressBar
        android:id="@+id/sign_up_loading_pb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:indeterminateTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/sign_up_agree1_layout"
        android:layout_marginTop="15dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_sign_up_btn"
        android:gravity="center_vertical"
        android:background="@drawable/border_round_transparent_gray_6">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="15dp"
            android:id="@+id/sign_up_box1_off_iv"
            android:background="@drawable/border_round_transparent_white_6" />

        <TextView
            android:id="@+id/sign_up_agree1_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:includeFontPadding="false"
            android:text="전체 약관에 동의합니다."

            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/sign_up_box1_on_iv"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="18dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_check"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/sign_up_agree1_layout"
        app:layout_constraintTop_toTopOf="@+id/sign_up_agree1_layout"
        app:layout_constraintBottom_toBottomOf="@+id/sign_up_agree1_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/sign_up_agree2_layout"
        android:layout_marginTop="15dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_agree1_layout"
        android:gravity="center_vertical"
        android:background="@drawable/border_round_transparent_gray_6">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="15dp"
            android:id="@+id/sign_up_box2_off_iv"
            android:background="@drawable/border_round_transparent_white_6" />

        <TextView
            android:id="@+id/sign_up_agree2_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:includeFontPadding="false"
            android:text="개인정보 약관에 동의합니다. (필수)"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/sign_up_box2_on_iv"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="18dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_check"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/sign_up_agree2_layout"
        app:layout_constraintTop_toTopOf="@+id/sign_up_agree2_layout"
        app:layout_constraintBottom_toBottomOf="@+id/sign_up_agree2_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/sign_up_agree3_layout"
        android:layout_marginTop="15dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_agree2_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"
        android:gravity="center_vertical"
        android:background="@drawable/border_round_transparent_gray_6">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="15dp"
            android:id="@+id/sign_up_box3_off_iv"
            android:background="@drawable/border_round_transparent_white_6" />

        <TextView
            android:id="@+id/sign_up_agree3_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:includeFontPadding="false"
            android:text="서비스 홍보 약관에 동의합니다. (선택)"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/sign_up_box3_on_iv"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="18dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_check"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/sign_up_agree3_layout"
        app:layout_constraintTop_toTopOf="@+id/sign_up_agree3_layout"
        app:layout_constraintBottom_toBottomOf="@+id/sign_up_agree3_layout"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>