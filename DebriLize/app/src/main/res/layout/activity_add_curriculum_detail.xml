<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkmode_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/darkmode_background">

        <LinearLayout
            android:id="@+id/add_curriculum_detail_debri_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/add_curriculum_detail_debri_logo_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logo_debri_img_eng" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/add_curriculum_detail_debri_user_iv"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:src="@drawable/ic_profile"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/add_curriculum_detail_info_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_curriculum_detail_debri_layout"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@color/darkmode_background"
            android:layout_marginTop="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp">

            <ImageView
                android:id="@+id/add_curriculum_detail_next_iv"
                android:layout_width="18dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_previous" />


            <ImageView
                android:id="@+id/add_curriculum_detail_status_iv"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_circle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/add_curriculum_detail_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="서버 로드맵"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:includeFontPadding="false"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/add_curriculum_detail_detail_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Server 및 Back-end에 대한 기초 및 심화"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:includeFontPadding="false"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/add_curriculum_detail_author_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="by Team Debri"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:includeFontPadding="false"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_marginTop="15dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/add_roadmap_dday_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_curriculum_detail_info_layout"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@color/darkmode_background"
            android:layout_marginTop="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp">

            <ImageView
                android:id="@+id/add_curriculum_detail_dday_iv"
                android:layout_width="25dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_arrow_left_down" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="vertical"
                android:layout_marginStart="7dp">

                <TextView
                    android:id="@+id/add_curriculum_detail_dday_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="커리큘럼 진행 기간"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:includeFontPadding="false"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/add_curriculum_detail_dday_tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100"
                        android:fontFamily="@font/noto_sans_kr_bold"
                        android:includeFontPadding="false"
                        android:textColor="@color/debri"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/add_curriculum_detail_dday_tv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="일"
                        android:fontFamily="@font/noto_sans_kr_bold"
                        android:includeFontPadding="false"
                        android:textColor="@color/white"
                        android:textSize="16dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/add_curriculum_detail_add_btn"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:background="@drawable/border_round_transparent_debri_6"
            android:text="시작하기"
            android:textColor="@color/darkmode_background"
            android:fontFamily="@font/noto_sans_kr_bold"
            android:textSize="16dp"
            android:includeFontPadding="false"
            android:layout_marginEnd="30dp"
            app:layout_constraintTop_toTopOf="@+id/add_roadmap_dday_layout"
            app:layout_constraintBottom_toBottomOf="@+id/add_roadmap_dday_layout"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/add_curriculum_detail_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="총 1089명이 이 커리큘럼을 활용했어요!"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:includeFontPadding="false"
            android:textColor="@color/debri"
            android:textSize="12sp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/add_roadmap_dday_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/add_curriculum_detail_lecture_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:orientation="vertical"
            android:overScrollMode="never"
            android:nestedScrollingEnabled="false"
            tools:listitem="item_class_favorite"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_curriculum_detail_tv" />

        <TextView
            android:id="@+id/add_curriculum_detail_review_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="유저들의 커리큘럼 한줄평"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/add_curriculum_detail_lecture_rv"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/add_curriculum_detail_review_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:orientation="vertical"
            android:overScrollMode="never"
            android:nestedScrollingEnabled="false"
            tools:listitem="item_review"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_curriculum_detail_review_tv"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="40dp"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>