<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/darkmode_background">

<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_marginBottom="6dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toTopOf="@id/add_curriculum_detail_write_review_btn">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/add_curriculum_detail_next_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_white"
            android:layout_marginStart="29dp"
            android:layout_marginTop="35dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>


        <ImageView
            android:id="@+id/add_curriculum_detail_status_iv"
            android:layout_width="127dp"
            android:layout_height="127dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_circle"
            android:layout_marginTop="35dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/item_curriculum_lang_tag_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Front"
            android:fontFamily="@font/noto_sans_kr_bold"
            android:includeFontPadding="false"
            android:textSize="10dp"
            android:textColor="@color/white"
            android:paddingVertical="2dp"
            android:paddingHorizontal="6dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/border_round_transparent_front_10"
            app:layout_constraintBottom_toTopOf="@+id/add_curriculum_detail_info_layout"
            app:layout_constraintStart_toStartOf="@+id/add_curriculum_detail_info_layout"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/add_curriculum_detail_info_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_curriculum_detail_status_iv"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@color/darkmode_background"
            android:layout_marginHorizontal="56dp">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                    android:id="@+id/add_curriculum_detail_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="서버 로드맵"
                    android:fontFamily="@font/noto_sans_kr_bold"
                    android:includeFontPadding="false"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/item_curriculum_author_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="by "
                        android:fontFamily="@font/noto_sans_kr_regular"
                        android:includeFontPadding="false"
                        android:textColor="@color/white"
                        android:textSize="9dp"/>

                    <TextView
                        android:id="@+id/item_curriculum_author_tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Team Debri"
                        android:fontFamily="@font/noto_sans_kr_bold"
                        android:includeFontPadding="false"
                        android:textColor="@color/white"
                        android:textSize="9dp"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/add_curriculum_detail_detail_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Server 및 Back-end에 대한 기초 및 심화"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:includeFontPadding="false"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/add_curriculum_detail_author_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JAVA는 이걸로 자바봐... 현존하는 최고의 자바강의
차별점을 위해 레이아웃을 중앙집중적으로 개선."
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:includeFontPadding="false"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/add_roadmap_dday_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_curriculum_detail_info_layout"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@color/darkmode_background"
            android:layout_marginTop="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp">

            <ImageView
                android:id="@+id/add_curriculum_detail_dday_iv"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:src="@drawable/ic_clock" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="vertical"
                android:layout_marginStart="11dp">

                <TextView
                    android:id="@+id/add_curriculum_detail_dday_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="커리큘럼 진행 기간"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:includeFontPadding="false"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/add_curriculum_detail_dday_tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100"
                        android:fontFamily="@font/noto_sans_kr_bold"
                        android:includeFontPadding="false"
                        android:textColor="@color/debri"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/add_curriculum_detail_dday_tv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="일"
                        android:fontFamily="@font/noto_sans_kr_bold"
                        android:includeFontPadding="false"
                        android:textColor="@color/white"
                        android:textSize="16dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/add_curriculum_detail_add_btn"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/border_round_transparent_debri_6"
            android:text="시작하기"
            android:textColor="@color/darkmode_background"
            android:fontFamily="@font/noto_sans_kr_bold"
            android:textSize="14dp"
            android:includeFontPadding="false"
            android:layout_marginEnd="22dp"
            app:layout_constraintTop_toTopOf="@+id/add_roadmap_dday_layout"
            app:layout_constraintBottom_toBottomOf="@+id/add_roadmap_dday_layout"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/add_curriculum_detail_cnt_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1089"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:includeFontPadding="false"
            android:textColor="@color/debri"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/add_curriculum_detail_tv2"
            app:layout_constraintEnd_toStartOf="@+id/add_curriculum_detail_tv2"/>

        <TextView
            android:id="@+id/add_curriculum_detail_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이 커리큘럼을 추천한 회원  "
            android:fontFamily="@font/noto_sans_kr_regular"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/add_roadmap_dday_layout"
            app:layout_constraintEnd_toStartOf="@+id/add_curriculum_detail_cnt_tv"/>

        <TextView
            android:id="@+id/add_curriculum_detail_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 명"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/add_roadmap_dday_layout"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="22dp"/>


        <TextView
            android:id="@+id/add_curriculum_detail_lecture_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="관련 강의자료"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:layout_marginTop="39dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/add_curriculum_detail_tv"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/add_curriculum_detail_lecture_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:orientation="vertical"
            android:overScrollMode="never"
            android:nestedScrollingEnabled="false"
            tools:listitem="item_class_favorite"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_curriculum_detail_lecture_tv" />

        <LinearLayout
            android:id="@+id/add_curriculum_like_layout"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="@drawable/border_round_transparent_debri_10"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/add_curriculum_detail_lecture_rv">

            <ImageView
                android:id="@+id/add_curriculum_like_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_like_dark"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:id="@+id/add_curriculum_like_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans_kr_bold"
                android:includeFontPadding="false"
                android:text="커리큘럼 추천하기"
                android:textColor="@color/darkmode_background"
                android:textSize="14dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/add_curriculum_detail_review_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="유저들의 커리큘럼 한줄평"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="27dp"
            app:layout_constraintTop_toBottomOf="@+id/add_curriculum_like_layout"
            app:layout_constraintStart_toStartOf="parent"/>

        <LinearLayout
            android:id="@+id/add_curriculum_detail_live_layout"
            android:layout_width="43dp"
            android:layout_height="16dp"
            android:orientation="horizontal"
            android:layout_marginEnd="30dp"
            android:background="@drawable/border_round_red_transparent_9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/add_curriculum_detail_review_tv"
            app:layout_constraintBottom_toBottomOf="@+id/add_curriculum_detail_review_tv"
            android:gravity="center">

            <ImageView
                android:id="@+id/add_curriculum_detail_live_iv"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/ic_circle_red" />


            <TextView
                android:id="@+id/add_curriculum_detail_live_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans_kr_bold"
                android:includeFontPadding="false"
                android:text="LIVE"
                android:textColor="@color/red"
                android:textSize="8dp"
                android:layout_marginStart="6dp"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/add_curriculum_detail_review_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:orientation="vertical"
            android:overScrollMode="never"
            android:nestedScrollingEnabled="false"
            tools:listitem="item_review"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_curriculum_detail_review_tv"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="40dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/add_curri_detail_review_page_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="7"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/add_curriculum_detail_review_rv">

            <ImageView
                android:id="@+id/add_curri_detail_review_page_previous_iv"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:src="@drawable/ic_previous"
                android:layout_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/add_curri_detail_review_pagenum1_tv"
                app:layout_constraintBottom_toBottomOf="parent"/>


            <TextView
                android:id="@+id/add_curri_detail_review_pagenum1_tv"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:fontFamily="@font/noto_sans_kr_black"
                android:includeFontPadding="false"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/circle_debri_debri_8"
                app:layout_constraintStart_toEndOf="@id/add_curri_detail_review_page_previous_iv"
                app:layout_constraintEnd_toStartOf="@id/add_curri_detail_review_pagenum2_tv"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                android:id="@+id/add_curri_detail_review_pagenum2_tv"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:fontFamily="@font/noto_sans_kr_black"
                android:includeFontPadding="false"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/circle_debri_debri_8"
                app:layout_constraintStart_toEndOf="@id/add_curri_detail_review_pagenum1_tv"
                app:layout_constraintEnd_toStartOf="@id/add_curri_detail_review_pagenum3_tv"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                android:id="@+id/add_curri_detail_review_pagenum3_tv"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:fontFamily="@font/noto_sans_kr_black"
                android:includeFontPadding="false"
                android:layout_weight="1"
                android:gravity="center"
                app:layout_constraintStart_toEndOf="@id/add_curri_detail_review_pagenum2_tv"
                app:layout_constraintEnd_toStartOf="@id/add_curri_detail_review_pagenum4_tv"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                android:id="@+id/add_curri_detail_review_pagenum4_tv"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:fontFamily="@font/noto_sans_kr_black"
                android:includeFontPadding="false"
                android:layout_weight="1"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/add_curri_detail_review_pagenum5_tv"
                app:layout_constraintStart_toEndOf="@id/add_curri_detail_review_pagenum3_tv"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                android:id="@+id/add_curri_detail_review_pagenum5_tv"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:fontFamily="@font/noto_sans_kr_black"
                android:includeFontPadding="false"
                android:layout_weight="1"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/add_curri_detail_review_page_next_iv"
                app:layout_constraintStart_toEndOf="@id/add_curri_detail_review_pagenum4_tv"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:id="@+id/add_curri_detail_review_page_next_iv"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:src="@drawable/ic_next"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/add_curri_detail_review_pagenum5_tv"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            app:layout_constraintStart_toStartOf="@id/add_curriculum_detail_review_rv"
            app:layout_constraintTop_toBottomOf="@id/add_curri_detail_review_page_layout"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>

<LinearLayout
android:id="@+id/add_curriculum_detail_write_review_btn"
android:layout_width="match_parent"
android:layout_height="45dp"
android:background="@drawable/border_round_debri_darkmode_10"
android:paddingStart="5dp"
android:paddingEnd="10dp"
android:layout_marginStart="30dp"
android:layout_marginEnd="30dp"
android:layout_marginBottom="6dp"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintBottom_toBottomOf="parent"
android:gravity="center_vertical"
android:orientation="horizontal">

<ImageView
    android:id="@+id/add_curriculum_detail_write_review_iv"
    android:layout_width="20dp"
    android:layout_height="20dp"
    android:src="@drawable/ic_write_debri"
    android:layout_marginStart="15dp"
    />

<EditText
    android:id="@+id/add_curriculum_detail_write_review_et"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fontFamily="@font/noto_sans_kr_bold"
    android:includeFontPadding="false"
    android:inputType="text"
    android:hint="한 줄 평 쓰기"
    android:textColorHint="@color/debri"
    android:textColor="@color/white"
    android:textSize="16sp"
    android:layout_marginStart="10dp"/>

</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>