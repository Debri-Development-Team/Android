<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkmode_background">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/profile_logo_debri_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_debri_img_eng"
        android:layout_marginTop="40dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/profile_user_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_logo_debri_iv"
        android:gravity="center_vertical"
        android:layout_marginTop="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/profile_previous_iv"
            android:layout_width="18dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_previous"
            android:layout_marginEnd="20dp"
            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profile_user_name_tv"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:text="나는야 개발 천재"
                android:fontFamily="@font/noto_sans_kr_regular"
                android:includeFontPadding="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/profile_user_id_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="debribeta@naver.com"
                android:fontFamily="@font/noto_sans_kr_regular"
                android:includeFontPadding="false"
                android:textColor="@color/white"
                android:textSize="12sp" />



        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/profile_user_img_iv"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:src="@drawable/ic_profile"/>

    </LinearLayout>

    <TextView
        android:id="@+id/profile_curriculum_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="진행중인 커리큘럼"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:includeFontPadding="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/profile_user_layout"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginStart="68dp"
        android:layout_marginEnd="30dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/profile_curriculum_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:orientation="vertical"
        android:overScrollMode="never"
        android:nestedScrollingEnabled="false"
        tools:listitem="@layout/item_curriculum_profile"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_curriculum_tv" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profile_curriculum_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_curriculum_rv"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@color/darkmode_background">

        <ImageView
            android:id="@+id/profile_curriculum_add_iv"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:src="@drawable/ic_circle_plus"
            android:layout_marginEnd="20dp"
            />

            <TextView
                android:id="@+id/profile_curriculum_add_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="새로운 커리큘럼 시작하기"
                android:fontFamily="@font/noto_sans_kr_regular"
                android:includeFontPadding="false"
                android:textColor="@color/white"
                android:textSize="18sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profile_menu_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_curriculum_layout"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginTop="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp">

        <TextView
            android:id="@+id/profile_menu_account_tv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="계정 설정"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:paddingStart="38dp"
            android:gravity="center_vertical"
            android:background="@drawable/border_line_top_bottom"/>

        <TextView
            android:id="@+id/profile_menu_alert_tv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="알림 설정"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:paddingStart="38dp"
            android:gravity="center_vertical"
            android:background="@drawable/border_line_bottom"/>

        <TextView
            android:id="@+id/profile_menu_post_tv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="게시물 설정"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:paddingStart="38dp"
            android:gravity="center_vertical"
            android:background="@drawable/border_line_bottom"/>

        <TextView
            android:id="@+id/profile_menu_notice_tv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="공지 사항"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:paddingStart="38dp"
            android:gravity="center_vertical"
            android:background="@drawable/border_line_bottom"/>

        <TextView
            android:id="@+id/profile_menu_service_info_tv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="데브리 서비스 정보"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:paddingStart="38dp"
            android:gravity="center_vertical"
            android:background="@drawable/border_line_bottom"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/border_line_bottom"/>

        <TextView
            android:id="@+id/profile_menu_logout_tv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="로그아웃"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:paddingStart="38dp"
            android:gravity="center_vertical"
            android:background="@drawable/border_line_bottom"
            android:layout_marginBottom="40dp"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>