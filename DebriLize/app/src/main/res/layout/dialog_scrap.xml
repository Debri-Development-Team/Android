<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:background="@drawable/border_round_transparent_gray_10"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="25dp"
    android:layout_marginEnd="25dp">

    <ImageView
        android:id="@+id/dialog_scrap_mark_debri_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_dialog_mark_debri"
        android:layout_marginStart="20dp"
        android:layout_marginTop="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dialog_scrap_language_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="홈>내 스크랩"
        android:fontFamily="@font/noto_sans_kr_bold"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/dialog_scrap_mark_debri_iv"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/dialog_scrap_post_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="에 저장되었습니다!"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintStart_toEndOf="@id/dialog_scrap_language_tv"
        app:layout_constraintTop_toTopOf="parent"/>





</LinearLayout>