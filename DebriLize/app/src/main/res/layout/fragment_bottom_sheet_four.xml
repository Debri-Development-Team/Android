<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/darkmode_background"
    android:id="@+id/bottom_sheet_edit_delete"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:behavior_hideable="true"
    app:behavior_draggable="true"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <LinearLayout
        android:id="@+id/bottom_sheet_two_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:background="@drawable/border_round_transparent_bottom_sheet_10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="6dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_sheet_close_tv">

        <TextView
            android:id="@+id/bottom_sheet_four_tv"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="커리큘럼 설정 변경"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/bottom_sheet_four_tv1"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:fontFamily="@font/noto_sans_kr_bold"
            android:includeFontPadding="false"
            android:gravity="center"
            android:text="비공개로 전환하기"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:background="@drawable/border_line_top"/>

        <TextView
            android:id="@+id/bottom_sheet_four_tv2"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:fontFamily="@font/noto_sans_kr_bold"
            android:includeFontPadding="false"
            android:gravity="center"
            android:text="커리큘럼 이름 변경하기"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:background="@drawable/border_line_top"/>

        <TextView
            android:id="@+id/bottom_sheet_four_tv3"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:fontFamily="@font/noto_sans_kr_bold"
            android:includeFontPadding="false"
            android:gravity="center"
            android:text="커리큘럼 초기화하기"
            android:textColor="@color/red"
            android:textSize="16sp"
            android:background="@drawable/border_line_top"/>

        <TextView
            android:id="@+id/bottom_sheet_four_tv4"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:fontFamily="@font/noto_sans_kr_bold"
            android:includeFontPadding="false"
            android:gravity="center"
            android:text="커리큘럼 삭제하기"
            android:textColor="@color/red"
            android:textSize="16sp"
            android:background="@drawable/border_line_top"/>

    </LinearLayout>

    <TextView
        android:id="@+id/bottom_sheet_close_tv"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="닫기"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:background="@drawable/border_round_transparent_close_10"
        android:fontFamily="@font/noto_sans_kr_bold"
        android:includeFontPadding="false"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>