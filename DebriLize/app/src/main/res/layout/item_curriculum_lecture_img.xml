<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/darkmode_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/item_board_favorite_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:id="@+id/padding_left"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/item_curriculum_lecture_img_iv"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_like_off"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/item_curriculum_lecture_img_checkbox_iv"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_like_off"
                android:layout_marginStart="30dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/item_curriculum_lecture_img_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="자바의 정석(1강-4강)"
                android:fontFamily="@font/noto_sans_kr_regular"
                android:includeFontPadding="false"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginStart="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/item_curriculum_lecture_img_checkbox_iv"
                app:layout_constraintStart_toEndOf="@+id/item_curriculum_lecture_img_checkbox_iv"/>

            <TextView
                android:id="@+id/item_curriculum_lecture_img_tag_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Front"
                android:textSize="11dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:textColor="@color/white"
                android:background="@drawable/border_round_transparent_front_10"
                app:layout_constraintStart_toStartOf="@+id/item_curriculum_lecture_img_title_tv"
                app:layout_constraintBottom_toTopOf="@+id/item_curriculum_lecture_img_title_tv"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_curriculum_lecture_img_progress_layout"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@+id/item_curriculum_lecture_img_title_tv"
                app:layout_constraintEnd_toEndOf="@+id/item_curriculum_lecture_img_title_tv">

            <TextView
                android:id="@+id/item_curriculum_lecture_img_progress_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:fontFamily="@font/noto_sans_kr_bold"
                android:includeFontPadding="false"
                android:textColor="@color/white"
                android:textSize="35dp" />

            <TextView
                android:id="@+id/item_curriculum_lecture_img_progress_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:fontFamily="@font/noto_sans_kr_bold"
                android:includeFontPadding="false"
                android:textColor="@color/white"
                android:textSize="35dp" />

            <TextView
                android:id="@+id/item_curriculum_lecture_img_progress_tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:fontFamily="@font/noto_sans_kr_bold"
                android:includeFontPadding="false"
                android:textColor="@color/white"
                android:textSize="35dp" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/padding_right"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone"/>

    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>